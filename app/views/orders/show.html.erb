<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

 <div class="order-summary jumbotron">
   <h4>Thank you for your order!</h4>
   <h4><%= @order.email %></h4>
 </div>
    <div>
      <% totalprice = 0 %>
      <% @order.line_items.each do |item| %>
        <p>Total Price in Dollars  - <%= item.total_price_cents%>
        </p>
        <p>Product Name - <%= item.product.name%></p>
        <p>Product Description - <%= item.product.description%></p>
        <p>Product Quantity - <%= item.quantity%></p>
        <p>Product Image - </p>
        <%= image_tag item.product.image.url, class: 'main-img' %>
        <p> <% totalprice += item.total_price_cents %> </p>
    </div>
      <% end %>
    <p>Total price all together is... <%= totalprice.round/ 100.0 %></p>
    </div>



  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>

