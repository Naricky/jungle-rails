<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>


        </dl>
      </div>
    </div>


    <div>
     <%if current_user %>
         <%= render 'form' %>
      <% end %>
    </div>

    <div class="row">

      <% @product.reviews.each do |review| %>
       <div class="col-sm-8">
         <dl class="dl-horizontal">
           <dt>Rating:</dt>
           <dd><%= review.rating %></dd>
         </dl>
       </div>
       <div class="col-sm-8">
         <dl class="dl-horizontal">
         <% if current_user %>
         <% if review.user_id == current_user.id %>

          <td class="deleteButton"><%= link_to 'delete review', product_review_path(product_id: @product, id: review.id), method: :delete %></td>
                  <% end %>

                  <% end %>
           <dt>Description</dt>
          <dd><%= review.description %></dd>
         </dl>
       </div>
       <% end  %>
     </div>




  </article>

</section>
